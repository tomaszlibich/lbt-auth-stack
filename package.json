{
  "name": "lbt-auth-stack",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "lbt-authentication-service",
    "lbt-authorization-service",
    "lbt-healthcheck"
  ],
  "scripts": {
    "build": "npm run build -w lbt-authentication-service && npm run build -w lbt-authorization-service",
    "build:auth": "npm run build -w lbt-authentication-service",
    "build:authz": "npm run build -w lbt-authorization-service",
    "dev:auth": "npm run dev -w lbt-authentication-service",
    "dev:authz": "npm run dev -w lbt-authorization-service"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.614.0",
    "@aws-sdk/lib-dynamodb": "^3.614.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.0"
  }
}
